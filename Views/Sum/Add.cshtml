@{
    if (ViewBag.res != null)
    {
        <p>The sum is @ViewBag.res</p>
    }
    else
    {
        @using (Html.BeginForm(FormMethod.Post))
        {
            @Html.LabelFor(x => x.Num1)
            ;
            @Html.EditorFor(x => x.Num1)
            ;
            <br />

            @Html.LabelFor(x => x.Num2)
            ;
            @Html.EditorFor(x => x.Num2)
            ;
            <br />
            <button type="submit">Add</button>

        }
    }
}